---
import "@fontsource-variable/work-sans/wght.css";
import Header from "@components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>

<script>
  const toggle = document.querySelector("input[name=toggle]");
  const menu = document.querySelector(".menu");
  const main = document.querySelector("main");
  // const footer = document.querySelector(".footer");

  const handleMenu = () => {
    // @ts-ignore
    if (toggle.checked) {
      // @ts-ignore
      main.style.animation = "dissappear 0.3s ease-in-out both";
      // // @ts-ignore
      // footer.style.animation = "dissappear 0.3s ease-in-out both";

      // @ts-ignore
      menu.style.animation = "none";

      setTimeout(() => {
        // @ts-ignore
        main.style.display = "none";
        // @ts-ignore
        menu.style.display = "block";
      }, 300);
    } else {
      // @ts-ignore
      menu.style.animation = "menu-dissappear 0.3s ease-in-out both";

      // @ts-ignore
      main.style.animation = "appear 0.3s ease-in-out both";

      setTimeout(() => {
        // @ts-ignore
        main.style.display = "block";

        // @ts-ignore
        menu.style.display = "none";
      }, 300);
    }
  };

  toggle.addEventListener("change", handleMenu);
</script>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  :root {
    --green: #00ad6a;
    --ligth-green: #1fe374;
    --subtle-green: #eafaf1;
    --gray: #d6dae5;
    --black: #080c16;
    --black-shadow: #080c16ab;
    --white: #fcfcfc;
    --max-width: 1200px;
  }

  body {
    font-family: "Work Sans Variable", sans-serif;
    background-color: var(--subtle-green);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  body > * {
    width: 100%;
    max-width: var(--max-width);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  li {
    list-style: none;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-weight: normal;
  }

  button {
    font-family: inherit;
    border: none;
    outline: none;
    cursor: pointer;
    background: transparent;
    font-size: inherit;
  }

  @keyframes item-appear {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes menu-dissappear {
    from {
      opacity: 1;
      transform: translateY(0);
    }
    to {
      opacity: 0;
      transform: translateY(20px);
    }
  }

  @keyframes appear {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes dissappear {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }
</style>
