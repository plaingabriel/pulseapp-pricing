        <li class="menu__item"><a class="menu__link" href="/">Blog</a></li>
        <li class="menu__item"><a class="menu__link" href="/">Contact</a></li>
        <li class="menu__item"><a class="menu__link" href="/">Support</a></li>
      </ul>

      <a href="/" class="menu__sign-up"
        ><span class="sign-up__text">Sign Up</span></a
      >
    </div>
  </nav>
</header>

<script>
  const textSignUp = document.querySelector(".sign-up__text");

  window.addEventListener("resize", () => {
    const windowWidth = window.innerWidth;

    if (windowWidth > 500 && windowWidth < 768) {
      // @ts-ignore
      textSignUp.innerText = "Sign Up for a Free 30-Day Trial";
    } else {
      // @ts-ignore
      textSignUp.innerText = "Sign Up";
    }
  });
</script>

