<header class="header">
  <nav class="navbar">
    <div class="display__container">
      <div class="logo_container">
        <img src="/pulse-logo.svg" alt="Pulse Logo" />
      </div>

      <label class="menu__toggle" for="toggle">
        <svg viewBox="0 0 35 22" xmlns="http://www.w3.org/2000/svg"
          ><title>Menu - Open</title><path
            fill="currentColor"
            d="M0 0h35v2H0zM0 10h35v2H0zM0 20h35v2H0z"></path></svg
        >
      </label>
    </div>

    <input type="checkbox" name="toggle" id="toggle" />

    <div class="menu">
      <ul class="menu__list">
        <li class="menu__item"><a class="menu__link" href="/">Features</a></li>
        <li class="menu__item">
          <a class="menu__link" href="/">Customer Stories</a>
        </li>
